<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="800.0" prefWidth="1000.0" style="-fx-background-color: linear-gradient(to bottom, #cce7ff, #e6ffee);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.flightbooking.AvailableFlightsSceneController">
    <children>
        <!-- Title Text -->
        <Text layoutX="370.0" layoutY="50.0" style="-fx-fill: #7cc47c; -fx-font-size: 32px; -fx-font-weight: bold;" text="Available Flights" />

        <!-- Search Section -->
        <VBox layoutX="300.0" layoutY="100.0" spacing="15.0">
            <children>
                <HBox spacing="10.0">
                    <children>
                        <ComboBox prefWidth="200.0" promptText="From (Departure City)" />
                        <ComboBox prefWidth="200.0" promptText="To (Destination City)" />
                    </children>
                </HBox>
                <HBox spacing="10.0">
                    <children>
                        <DatePicker prefWidth="200.0" promptText="Departure Date" />
                        <Button prefWidth="100.0" style="-fx-background-color: #a8d5a8; -fx-text-fill: #ffffff; -fx-font-size: 17; -fx-background-radius: 10;" text="Search Flights" />
                    </children>
                </HBox>
            </children>
        </VBox>

        <!-- Hamburger Menu Button (Toggles the Hidden Pane) -->
        <Button fx:id="menuButton" layoutX="20.0" layoutY="20.0" onAction="#handleMenuButtonClick" style="-fx-background-color: transparent; -fx-font-size: 30; -fx-text-fill: #7cc47c;" text="â˜°" />

        <!-- Hidden Sliding Pane (Initially Off-Screen) -->
        <VBox fx:id="hiddenPane" layoutX="-250.0" layoutY="0.0" spacing="20.0" style="-fx-background-color: #f1f1f1; -fx-border-radius: 10; -fx-padding: 20;">
            <children>
                <!-- Add extra functionality, like account settings and logout here -->
                <Button fx:id="meButton" onAction="#handleMyFlightsButtonClick" prefWidth="200.0" style="-fx-background-color: #a8d5a8; -fx-text-fill: #ffffff; -fx-font-size: 17; -fx-background-radius: 10;" text="My Flights" />
                <Button fx:id="accountSettingsButton" onAction="#handleAccountSettingsButtonClick" prefWidth="200.0" style="-fx-background-color: #a8d5a8; -fx-text-fill: #ffffff; -fx-font-size: 17; -fx-background-radius: 10;" text="Account Settings" />
                <Button fx:id="signOffButton" onAction="#handleSignOffButtonClick" prefWidth="200.0" style="-fx-background-color: #a8d5a8; -fx-text-fill: #ffffff; -fx-font-size: 17; -fx-background-radius: 10;" text="Sign Off" />
            </children>
        </VBox>

        <!-- Available Flights Table -->
        <TableView layoutX="100.0" layoutY="200.0" prefHeight="300.0" prefWidth="800.0">
            <columns>
                <TableColumn prefWidth="200.0" text="Flight Number" />
                <TableColumn prefWidth="200.0" text="Departure" />
                <TableColumn prefWidth="200.0" text="Destination" />
                <TableColumn prefWidth="200.0" text="Date" />
                <TableColumn prefWidth="200.0" text="Price" />
            </columns>
        </TableView>

        <!-- Book Button -->
        <Button layoutX="446.0" layoutY="668.0" style="-fx-background-color: #88c488; -fx-text-fill: #ffffff; -fx-font-size: 17; -fx-background-radius: 10;" text="Book Flight" />
    </children>
</AnchorPane>
