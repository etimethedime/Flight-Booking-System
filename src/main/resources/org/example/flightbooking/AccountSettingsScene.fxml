<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.flightbooking.AccountSettingsSceneController" style="-fx-background-color: linear-gradient(to bottom, #cce7ff, #e6ffee);">
    <children>
        <Label layoutX="179.0" layoutY="50.0" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-fill: #7cc47c;" text="Account Settings" />

        <VBox alignment="CENTER" layoutX="50.0" layoutY="100.0" spacing="20.0">
            <children>
                <Button mnemonicParsing="false" onAction="#handleChangePassword" prefHeight="45.0" prefWidth="200.0" text="Change Password" style="-fx-background-color: #a8d5a8; -fx-text-fill: #ffffff; -fx-font-size: 17; -fx-background-radius: 10;" />
                <Button mnemonicParsing="false" onAction="#handleUpdateEmail" prefHeight="45.0" prefWidth="200.0" text="Update Email" style="-fx-background-color: #88c488; -fx-text-fill: #ffffff; -fx-font-size: 17; -fx-background-radius: 10;" />
                <Button mnemonicParsing="false" onAction="#handleUpdateInformation" prefHeight="45.0" prefWidth="200.0" text="Log Out" style="-fx-background-color: #8fdf8f; -fx-text-fill: #ffffff; -fx-font-size: 17; -fx-background-radius: 10;" />
            </children>
        </VBox>
    </children>
</AnchorPane>
