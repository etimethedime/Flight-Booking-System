<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="800.0" prefWidth="1000.0" style="-fx-background-color: linear-gradient(to bottom, #cce7ff, #e6ffee);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.flightbooking.ControllerMyFlightsScene">
    <children>
        <Button fx:id="goBackButton" layoutX="40.0" layoutY="20.0" style="-fx-background-color: #88c488; -fx-text-fill: #ffffff; -fx-font-size: 14; -fx-background-radius: 10;" text="Go Back" onAction="#GoBackToAvailableFlightsButtonClick"/>
        <Label layoutX="370.0" layoutY="50.0" style="-fx-font-size: 32; -fx-font-weight: bold; -fx-fill: #7cc47c;" text="My Flights" />
        <TableView fx:id="flightsTable" layoutX="50.0" layoutY="150.0" prefHeight="500.0" prefWidth="900.0">
            <columns>
                <TableColumn fx:id="bookingIdColumn" prefWidth="150.0" text="Booking ID" />
                <TableColumn fx:id="flightIdColumn" prefWidth="150.0" text="Flight ID" />
                <TableColumn fx:id="seatNumberColumn" prefWidth="150.0" text="Seat Number" />
                <TableColumn fx:id="detailsColumn" prefWidth="150.0" text="Details" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
