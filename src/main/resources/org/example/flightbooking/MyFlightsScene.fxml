<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="800.0" prefWidth="1000.0" style="-fx-background-color: linear-gradient(to bottom, #cce7ff, #e6ffee);" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.flightbooking.ControllerMyFlightsScene">
    <children>
        <Button fx:id="goBackButton" layoutX="40.0" layoutY="20.0" onAction="#GoBackToAvailableFlightsButtonClick" style="-fx-background-color: #88c488; -fx-text-fill: #ffffff; -fx-font-size: 14; -fx-background-radius: 10;" text="Go Back" />
        <Label layoutX="370.0" layoutY="50.0" style="-fx-font-size: 32; -fx-font-weight: bold; -fx-fill: #7cc47c;" text="My Flights" />
        <TableView layoutX="50.0" layoutY="150.0" prefHeight="500.0" prefWidth="900.0">
            <columns>
                <TableColumn fx:id="BookingID" prefWidth="150.0" text="Booking ID" />
                <TableColumn fx:id="FlightID" prefWidth="150.0" text="Flight ID" />
                <TableColumn fx:id="DepartureCityCol" prefWidth="150.0" text="Departure City" />
                <TableColumn fx:id="ArrivalCityCol" prefWidth="150.0" text="Arrival City" />
                <TableColumn fx:id="DepartureTimeCol" prefWidth="150.0" text="Departure Time" />
                <TableColumn fx:id="ArrivalTimeCol" prefWidth="150.0" text="Arrival Time" />
                <TableColumn fx:id="SeatCol" prefWidth="150.0" text="Terminal" />
            </columns>
        </TableView>
      <Button fx:id="goBackButton1" layoutX="149.0" layoutY="20.0" onAction="#initialize" style="-fx-background-color: #88c488; -fx-text-fill: #ffffff; -fx-font-size: 14; -fx-background-radius: 10;" text="Refresh" />
    </children>
</AnchorPane>
